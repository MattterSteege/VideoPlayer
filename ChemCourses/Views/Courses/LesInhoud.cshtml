<script>
    var acc = Array.from(document.getElementsByClassName("accordion"));
    acc.forEach(function (el) {
        el.addEventListener("click", function () {
            var accordianContent = this.querySelector(".accordian-content");
            if (accordianContent.style.display === "block") {
                accordianContent.style.display = "none";
            } else {
                accordianContent.style.display = "block";
            }
        });
    })
</script>

